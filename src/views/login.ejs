

<%- include ('includes/head') %>
<%- include ('includes/nav') %>
 
<div class="container">
  <div class="row justify-content-center">
      <div class="col-lg-2 d-none d-lg-block"></div> <!-- Mantém a margem apenas em telas grandes -->

      <div class="col-lg-8 col-md-10 col-sm-12 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

          <%- include('includes/messages'); %>

          <div class="row">
              <div class="col-md-6 col-sm-12 mb-8">
                  <h4 class="text-center text-md-start">Faça seu cadastro</h4>
                  <p class="text-center text-md-start">Se você ainda não tem conta, preencha o formulário abaixo:</p>
                  <form class="form-cadastro" action="/login/register" method="POST">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <div class="form-group">
                          <label>Seu Email</label>
                          <input type="email" class="form-control" name="email" required>
                      </div>
                      <div class="form-group">
                          <label>Sua Senha</label>
                          <input type="password" class="form-control" name="password" required>
                      </div>
                      <button type="submit" class="btn btn-primary w-100 mt-2">Criar minha conta</button>
                  </form>
              </div>

              <div class="col-md-6 col-sm-12">
                  <h4 class="text-center text-md-start">Faça seu login</h4>
                  <p class="text-center text-md-start">Se você já tem conta, faça login abaixo:</p>
                  <form class="form-login" action="/login/login" method="POST">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <div class="form-group">
                          <label>Seu Email</label>
                          <input type="email" class="form-control" name="email" required>
                      </div>
                      <div class="form-group">
                          <label>Sua Senha</label>
                          <input type="password" class="form-control" name="password" required>
                      </div>
                      <button type="submit" class="btn btn-primary w-100 mt-2">Entrar</button>
                  </form>
              </div>
          </div>
          
      </div>

      <div class="col-lg-2 d-none d-lg-block"></div> <!-- Mantém a margem apenas em telas grandes -->
  </div>
</div>


<%- include ('includes/footer') %> 
